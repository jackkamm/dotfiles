general {
        colors = true
        interval = 5
}

#order += "ipv6"
#order += "disk /"
#order += "run_watch DHCP"
order += "run_watch VPN"
order += "wireless _first_"
#order += "ethernet _first_"
order += "cpu_temperature 1"
order += "load"
order += "volume master"
order += "battery 0"
order += "tztime local"

wireless _first_ {
        format_up = "%essid %quality %ip"
        format_down = "down"
}

ethernet _first_ {
        # if you use %speed, i3status requires root privileges
        format_up = "E: %ip (%speed)"
        format_down = "E: down"
}

battery 0 {
        format = "%remaining%status%percentage"
        status_bat = "ðŸ”‹"
        status_chr = "âš¡"
        status_unk = "?"
        status_full = "â˜»"
}

run_watch DHCP {
        pidfile = "/var/run/dhclient*.pid"
}

run_watch VPN {
        pidfile = "/var/run/openvpn.pid"
}

tztime local {
        format = "%Y-%m-%d %H:%M"
}

load {
        format = "CPU %1min"
}

disk "/" {
        format = "%avail"
}

volume master {
        format = "â™ª:%volume"
        format_muted = "â™ª:muted(%volume)"
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}

cpu_temperature 1 {
        format = "%degreesÂ°C"
        path = "/sys/devices/platform/coretemp.0/hwmon/hwmon*/temp1_input"
